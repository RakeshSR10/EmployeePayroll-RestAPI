{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Employee Payroll Back-End app",
      "description": "Employee Payroll Application API",
      "license": {
        "name": "MIT",
        "url": "https://opensource.org/licenses/MIT"
      }
    },
    "host": "localhost:8000",
    "basePath": "/",
    "tags": [
      {
        "name": "Employees",
        "description": "API for Employees in the system"
      }
    ],
    "schemes": [
      "http"
    ],
    "consumes": [
      "application/json"
    ],
    "produces": [
      "application/json"
    ],
    "paths": {
      "/employeeRegister": {
        "post": {
          "tags": [
            "Register"
          ],
          "description": "Create new employee in system",
          "parameters": [
            {
              "name": "Register",
              "in": "body",
              "description": "Employee that we want to create",
              "schema": {
                "$ref": "#/definitions/register"
              }
            }
          ],
          "produces": [
            "application/json"
          ],
          "schema": {
            "$ref": "#/definitions/register"
          },
          "responses": {
            "200": {
              "description": "New Employee is added"
            },
            "400":{
              "description":"Bad request"
            }
          }
        }
      },
      "/employeeLogin": {
        "post": {
          "tags": [
            "login"
          ],
          "description": "login Employee in system",
          "parameters": [
            {
              "name": "Login",
              "in": "body",
              "description": "Employee that we want to login",
              "schema": {
                "$ref": "#/definitions/login"
              }
            }
          ],
          "produces": [
            "application/json"
          ],
          "schema": {
            "$ref": "#/definitions/login"
          },
          "responses": {
            "200": {
              "description": "New login"   
            },
            "400":{
              "description":"Bad request"
            }
          },
          "security":[
            {
              "JWT":[]
            }
          ]
        }
      },"/employees": {
        "get": {
          "tags": ["read"],
          "description": "retrieve employees data from system",
          "parameters": [],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Success"    
            },
            "400": {
              "description": "Bad Request"
            },
    
            "404": {
              "description": "Not found"
            },
            "401": {
              "description": "Authorization error"
            }
          },
          "security": [{
              "JWT": []
          }]
        }
      },
  
      "/employees/:{_id}": {
        "get": {
          "tags": [
            "readById"
          ],
          "description": "retrieve employee details by id from system",
          "parameters": [
            {
              "name": ":_id",
              "in": "path",
              "required": true,
              "type": "string"
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Success"    
            },
            "400": {
              "description": "Bad Request"
            },
            "404": {
              "description": "Not found"
            }
          },
          "security":[{
            "JWT" :[]
          }]
        }
      },
      "/update/:{_id}": {
        "put": {
          "tags": [
            "updateById"
          ],
          "description": "update existing employee details by id from system",
          "parameters": [
            {
              "name": ":_id",
              "in": "path",
              "required": true,
              "type": "string"
            },
            {
              "name": "Updated Employee Details",
              "in": "body",
              "required": true,
              "schema": {
                "$ref": "#/definitions/register"
              }
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Success"    
            },
            "400": {
              "description": "Bad Request"
            },
            "404": {
              "description": "Not found"
            }
          },
          "security":[{
            "JWT" :[]
          }]
        }
      },
      "/delete/:{_id}": {
        "delete": {
          "tags": [
            "deleteById"
          ],
          "description": "delete employee details by id from system",
          "parameters": [
            {
              "name": ":_id",
              "in": "path",
              "required": true,
              "type": "string"
            }
          ],
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Success"    
            },
            "400": {
              "description": "Bad Request"
            },
    
            "404": {
              "description": "Not found"
            }
          },
          "security":[{
            "JWT" :[]
          }]
        }
      }
    },
    "definitions": {
      "register": {
        "type": "object",
        "properties": {
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "emailId": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "login": {
        "type": "object",
        "properties": {
          "emailId" : {
            "type" :"string"
          },
        "password": {
          "type": "string"
          }
        }
      }
    },
    "securityDefinitions":{
      "JWT":{
        "type":"apiKey",
        "name":"token",
        "in":"header"
      }
    }
  }